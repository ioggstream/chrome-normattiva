{
  "name": "Cerca in normattiva",
  "description": "Usa il contextMenus o la shortcut `na` per ricercare in normattiva",
  "version": "0.8",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": ["contextMenus"],
  "background": {
    "scripts": [ "background.js"],
    "persistent": false
  },
  "omnibox": { "keyword" : "na" },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
   "16": "iconPA16.png",
   "48": "iconPA48.png",
  "128": "iconPA128.png"
 }
}
